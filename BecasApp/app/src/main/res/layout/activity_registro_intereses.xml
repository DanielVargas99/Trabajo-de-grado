            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Te podría interesar"
            android:textSize="30dp"
            android:fontFamily="@font/geomanist_bold"
            android:textColor="@color/black"/>

        <GridLayout
