                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/geomanist_regular"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                android:clickable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ingenieria"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Ingenieria"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/geomanist_regular"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                android:clickable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ia"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Inteligencia artificial"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/geomanist_regular"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                android:clickable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/machine"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Machine learning"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/geomanist_regular"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                android:clickable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ciberseguridad"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Ciberseguridad"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/geomanist_regular"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                android:clickable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/big_data"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Big data"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/geomanist_regular"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                android:clickable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pregrado"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Pregrado"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/geomanist_regular"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                android:clickable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/estados_unidos"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Estados Unidos"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/geomanist_regular"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O añade tus intereses aquí"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:fontFamily="@font/geomanist_bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/texto">

                <TextView
                    android:id="@+id/interes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interes 1: "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:fontFamily="@font/geomanist_regular"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/campoint1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/interes1"
                    android:fontFamily="@font/geomanist_regular"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/texto">

                <TextView
                    android:id="@+id/interes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interes 2: "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:fontFamily="@font/geomanist_regular"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/campoint2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/interes2"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:fontFamily="@font/geomanist_regular"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/texto">

                <TextView
                    android:id="@+id/interes3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interes 3: "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:fontFamily="@font/geomanist_regular"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/campoint3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/interes3"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:fontFamily="@font/geomanist_regular"
                    android:gravity="center_vertical"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/texto">

                <TextView
                    android:id="@+id/interes4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interes 4: "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:fontFamily="@font/geomanist_regular"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/campoint4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/interes4"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:fontFamily="@font/geomanist_regular"
                    android:gravity="center_vertical"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/texto">

                <TextView
                    android:id="@+id/interes5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interes 5: "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:fontFamily="@font/geomanist_regular"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/campoint5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/interes5"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:fontFamily="@font/geomanist_regular"
                    android:gravity="center_vertical"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/generar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generar resultados"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:fontFamily="@font/geomanist_bold"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/imagenintereses"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/finalizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finalizar"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:fontFamily="@font/geomanist_bold"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cornerRadius="50dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:backgroundTint="@color/animacion_boton"/>

            <RelativeLayout
                android:id="@+id/progress_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:progress="100"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:progressDrawable="@drawable/barra_progreso"/>

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/numero1"
