<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/formatoBeca"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icono"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_icono"
                android:backgroundTint="@color/colorBase"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/icono">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre: "
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/geomanist_bold"/>

                    <TextView
                        android:id="@+id/campoNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/nombre"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/geomanist_regular"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/pais"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lugar: "
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/geomanist_bold"/>

                    <TextView
                        android:id="@+id/campoPais"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/pais"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/geomanist_regular"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de beca: "
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/geomanist_bold"/>

                    <TextView
                        android:id="@+id/campoTipo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tipo"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/geomanist_regular"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>